<div class="page-header">
  <h3>Menu Item #<%= @menu_item.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @menu_item.name %></dd>

      <dt>Dish</dt>
      <dd>
        <% if @menu_item.dish.present? %>
          <a href="/dishes/<%= @menu_item.dish_id %>">
            <%= @menu_item.dish.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Venue</dt>
      <dd>
        <% if @menu_item.venue.present? %>
          <a href="/venues/<%= @menu_item.venue_id %>">
            <%= @menu_item.venue.name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/menu_items" class="btn btn-primary">
        Back
      </a>
      <a href="/menu_items/<%= @menu_item.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_menu_item/<%= @menu_item.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
